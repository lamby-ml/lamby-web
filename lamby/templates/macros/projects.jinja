{%  macro render_projects(projects) %}
<div class="uk-child-width-1-4@s uk-grid-match" uk-grid>
    {%- for project in projects %}
        <div>
            <div id="project-card-{{ loop.index }}" class="uk-card uk-card-body uk-text-center" style="word-wrap: break-word !important;">
                <h3 class="uk-card-title">{{ project.name }}</h3>
                <p>{{ project.description }}</p>
            </div>
        </div>
    {%- endfor %}
</div>
{%- endmacro %}
