<!DOCTYPE html>
<html lang="en">
  <head>
    {% block head %}
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="stylesheet" href="{{ url_for('static', filename='css/index.css') }}" />

    <title>{% block title %}{% endblock %}</title>
    {% endblock %}
  </head>

  <body>
  {# Navbar #}
  {% block navbar %}
    <nav>
      <div>
        <h3>lamby</h3>
      </div>
      <div>
        <ul>
          {% block navlinks %}
          {% endblock %}
        </ul>
      </div>
    </nav>
  {% endblock %}

  {# Main Content #}
  <div class="content">
  {% block content %}
  {% endblock %}
  </div>

  {# Footer #}
  {% block footer %}
  {% endblock %}
  </body>
</html>
